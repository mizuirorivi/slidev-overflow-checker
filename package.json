{
  "name": "slidev-overflow-checker",
  "version": "0.1.0",
  "description": "Automatically detect content overflow in Slidev presentations",
  "main": "dist/index.js",
  "bin": {
    "slidev-overflow-checker": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "dev": "tsup && node dist/cli.js",
    "build": "tsup && chmod +x dist/cli.js",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "slidev",
    "overflow",
    "checker",
    "presentation",
    "playwright",
    "testing",
    "accessibility"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@playwright/test": "^1.49.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.2.0",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mizuirorivi/slidev-overflow-checker.git"
  },
  "bugs": {
    "url": "https://github.com/mizuirorivi/slidev-overflow-checker/issues"
  },
  "homepage": "https://github.com/mizuirorivi/slidev-overflow-checker#readme"
}
